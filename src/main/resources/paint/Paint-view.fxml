<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="borderPane" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="paint.PaintController">
   <center>
      <TabPane BorderPane.alignment="CENTER">
         <tabs>
            <Tab closable="false">
               <graphic>
                  <Button alignment="CENTER" contentDisplay="TOP" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="21.0" prefWidth="27.0" text="+" textAlignment="CENTER" />
               </graphic>
            </Tab>
         </tabs>
      </TabPane>
   </center>
   <bottom>
      <Label text="Time until AutoSave: 1:00" textFill="WHITE" BorderPane.alignment="BOTTOM_LEFT" />
   </bottom>
</BorderPane>
